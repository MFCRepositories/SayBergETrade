@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager


    <ul class="navbar-nav">
        @if (SignInManager.IsSignedIn(User))
        {
            <li class="nav-item">
                <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hoşgeldiniz @User.Identity.Name
                    </a>
            </li>
            <li class="nav-item">
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="nav-link btn btn-link text-danger"><i class="bi bi-x-circle"></i> Çıkış</button>
                </form>
            </li>
        }
        else
        {
            <li class="nav-item">
                <a class="btn btn-outline-primary" asp-area="Identity" asp-page="/Account/Register" style="margin-right:0.5rem"><i class="bi bi-person-circle"></i> Üye Ol</a>
            </li>
            <li class="nav-item">
                <a class="btn btn-outline-success" asp-area="Identity" asp-page="/Account/Login"><i class="bi bi-box-arrow-right"></i> Giriş</a>
            </li>
        }
    </ul>
